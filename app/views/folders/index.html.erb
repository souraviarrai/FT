<div class="container">
  <% if !flash[:notice].blank? %>
    <div>
      <%= flash[:notice] %>
    </div>
  <% end %>

  <br>

  <%= link_to "New File", new_folder_path %>
  <br>
  <br>

  <table border="3">
    <thead>
    <tr>
      <th>Candidate Name</th>
      <th>Download Link</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% @folders.each do |folder| %>

      <tr>
        <td><%= folder.name %></td>
        <td><%= link_to "Download", folder.attachment_url %></td>
        <td><%= link_to "Show", folder %></td>
        <td><%= button_to "Delete", folder , method: :delete, data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %></td>
      </tr>

    <% end %>
    </tbody>

  </table>
</div>
